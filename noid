<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<xs:schema version="1.0" xmlns:xs="http://www.w3.org/2001/XMLSchema">

  <xs:element name="response" type="response"/>

  <xs:complexType name="response">
    <xs:sequence>
      <xs:element name="header" type="header"/>
      <xs:element name="body" type="body"/>
    </xs:sequence>
  </xs:complexType>

  <xs:complexType name="header">
    <xs:sequence>
      <xs:element name="resultCode" type="xs:string"/>
      <xs:element name="resultMsg" type="xs:string"/>
    </xs:sequence>
  </xs:complexType>

  <xs:complexType name="body">
    <xs:sequence>
      <xs:element name="items" minOccurs="0">
        <xs:complexType>
          <xs:sequence>
            <xs:element name="item" type="item" minOccurs="0" maxOccurs="unbounded"/>
          </xs:sequence>
        </xs:complexType>
      </xs:element>
      <xs:element name="numOfRows" type="xs:int"/>
      <xs:element name="pageNo" type="xs:int"/>
      <xs:element name="totalCount" type="xs:int"/>
    </xs:sequence>
  </xs:complexType>

  <xs:complexType name="item">
    <xs:sequence>
      <xs:element name="locdate" type="xs:unsignedShort"/>
      <xs:element name="seq" type="xs:positiveInteger"/>
      <xs:element name="dateKind" type="xs:enumeration"/>
      <xs:element name="isHoliday" type="xs:token"/>
      <xs:element name="dateName" type="xs:token"/>
      <xs:element name="kst" type="xs:token"/>
    </xs:sequence>
  </xs:complexType>

  <xs:simpleType name="dateKind">
    <xs:restriction base="xs:string">
      <xs:enumeration value="01"/>
      <xs:enumeration value="02"/>
      <xs:enumeration value="03"/>
      <xs:enumeration value="04"/>
    </xs:restriction>
  </xs:simpleType>
</xs:schema>

